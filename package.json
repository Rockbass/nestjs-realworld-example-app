{
  "name": "nestjs-realworld-example-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist/ && tsc -p tsconfig.build.json",
    "start": "ts-node index.js",
    "start:old": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:watch": "nodemon",
    "start:dev": "NODE_ENV=dev ts-node-dev src/main.ts",
    "prestart:prod": "npm run build",
    "start:prod": "node dist/main.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:coverage": "jest --config=jest.json --coverage --coverageDirectory=coverage",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "cucumber-test": "cucumber-js -p default",
    "cucumber-report": "node 'reports/cucumber-html-reporter.js'",
    "add-to-stage": "git add ."
  },
  "pre-commit": [
    "format",
    "lint",
    "build",
    "test",
    "add-to-stage"
  ],
  "dependencies": {
    "@nestjs/common": "^6.0.1",
    "@nestjs/core": "^6.0.1",
    "@nestjs/microservices": "^6.0.1",
    "@nestjs/platform-express": "^6.0.1",
    "@nestjs/swagger": "^3.0.1",
    "@nestjs/typeorm": "^6.0.0",
    "@nestjs/websockets": "^6.0.1",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "crypto": "^1.0.1",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "mssql": "^5.1.0",
    "mysql": "^2.17.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.2",
    "slug": "^1.0.0",
    "swagger-ui-express": "^4.0.7",
    "typeorm": "^0.2.15"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.3",
    "@types/cucumber": "^4.0.7",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^23.3.14",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/node": "^10.14.16",
    "@types/slug": "^0.9.1",
    "@types/supertest": "^2.0.8",
    "atob": ">=2.1.0",
    "deep-extend": ">=0.5.1",
    "extend": ">=3.0.2",
    "faker": "^4.1.0",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "ts-node-dev": "^1.0.0-pre.41",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint '*/**/*.{js,ts,json}' --quiet --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
